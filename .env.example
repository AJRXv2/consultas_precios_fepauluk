# Variables de entorno para Railway
# Copiar este archivo a .env localmente y configurar valores reales

# PostgreSQL (Railway lo provee automáticamente con DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/dbname
LISTAS_EN_DB=1

# Flask
SECRET_KEY=cambia-esto-por-una-clave-segura-aleatoria

# Configuración de almacenamiento
USE_SQLITE=0

# Debug
DEBUG_LOG=0

# Zona horaria
APP_TZ=America/Argentina/Buenos_Aires

# Puerto (Railway lo asigna automáticamente con PORT)
# PORT=5000

# Ruta de listas (IMPORTANTE: debe coincidir con el Mount Path del Volume en Railway)
# En Railway: /app/listas_excel (si creaste un Volume montado ahí)
# Local: listas_excel (relativo)
LISTAS_PATH=/app/listas_excel

# Configuración de paginación
VENTAS_AVANZADAS_PER_PAGE=20
